# =============================================================================
# DISCORD SERVICE CONFIGURATION
# =============================================================================

# Discord Message Fetching Settings
DISCORD_USER_TOKEN=your_discord_user_token
DISCORD_CHANNEL_ID=your_discord_channel_id  
TARGET_USER_ID=your_target_user_id

# =============================================================================
# TRADING SERVICE CONFIGURATION  
# =============================================================================

# OKX Settings
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase
OKX_IS_SANDBOX=true
OKX_ENABLED=true

# Authentication & Security Settings
JWT_SECRET_KEY=your_jwt_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# Notification Settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# =============================================================================
# SHARED CONFIGURATION
# =============================================================================

# MongoDB Settings
# For Docker Compose: mongodb://admin:password123@mongodb:27017/algobot_signal_trading?authSource=admin
# For local MongoDB with auth: mongodb://admin:password123@localhost:3099/algobot_signal_trading?authSource=admin
# For local MongoDB without auth: mongodb://localhost:27017/algobot_signal_trading
MONGODB_URL=mongodb://admin:password123@mongodb:27017/algobot_signal_trading?authSource=admin
MONGODB_DB=algobot_signal_trading

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
